<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image30">

    <ImageView
        android:id="@+id/logoMindMate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logomindmate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/tvTitoloDettaglioUtente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dettagli Utente"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#222"
        android:drawablePadding="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/headerLineEvento"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#FFF8E7"
        app:layout_constraintTop_toBottomOf="@id/logoMindMate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <TextView
        android:id="@+id/tvNomeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitoloDettaglioUtente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvNomeUtente"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Sofia"
        android:background="@drawable/bg_field_rounded"
        android:padding="8dp"
        android:textColor="#666"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvNomeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvEtaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EtÃ "
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvNomeUtente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvEtaUtente"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="14 anni"
        android:background="@drawable/bg_field_rounded"
        android:padding="8dp"
        android:textColor="#666"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvEtaLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvOccupazioneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occupazione"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvEtaUtente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvOccupazioneUtente"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Studentessa"
        android:background="@drawable/bg_field_rounded"
        android:padding="8dp"
        android:textColor="#666"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvOccupazioneLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvObiettiviRaggiuntiLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obiettivi raggiunti"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#222"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvOccupazioneUtente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RecyclerView verticale per obiettivi raggiunti -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerObiettiviRaggiunti"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvObiettiviRaggiuntiLabel"
        app:layout_constraintBottom_toTopOf="@id/btnIndietro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/btnIndietro"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Indietro"
        android:textStyle="bold"
        android:backgroundTint="#BDBDBD"
        android:textColor="#222"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
