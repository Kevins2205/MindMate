<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image30">

    <ImageView
        android:id="@+id/logoMindMate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logomindmate"
        android:contentDescription="@string/app_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/headerLine" />


    <!-- Titolo centrato orizzontalmente -->
    <TextView
        android:id="@+id/tvTitoloProfilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILO"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#222"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Linea divisoria -->
    <View
        android:id="@+id/headerLineProfilo"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#DDD"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitoloProfilo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Titolo grafico -->
    <TextView
        android:id="@+id/tvGraficoUmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRAFICO DELL'UMORE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLineProfilo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Box grafico con bordi arrotondati -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardGraficoUmore"
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvGraficoUmore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartUmore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Area personale -->
    <TextView
        android:id="@+id/tvAreaPersonale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area personale"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#222"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardGraficoUmore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Pulsanti area personale -->
    <GridLayout
        android:id="@+id/gridAreaPersonale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintTop_toBottomOf="@id/tvAreaPersonale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Pulsanti grandi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp"
            android:background="@drawable/bg_event_item_rounded">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_user_info"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dettagli Utente"
                android:textColor="#222"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp"
            android:background="@drawable/bg_event_item_rounded">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_favorite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preferiti"
                android:textColor="#222"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp"
            android:background="@drawable/bg_event_item_rounded">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_save"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvati per dopo"
                android:textColor="#222"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp"
            android:background="@drawable/bg_event_item_rounded">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_event"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prossimi Eventi"
                android:textColor="#222"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="12dp"
            android:background="@drawable/bg_event_item_rounded">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_settings"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Impostazioni"
                android:textColor="#222"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
