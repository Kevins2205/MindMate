<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image30">

    <!-- Logo MindMate in alto a sinistra -->
    <ImageView
        android:id="@+id/logoMindMate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logomindmate"
        android:contentDescription="@string/app_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Freccia sinistra -->
    <TextView
        android:id="@+id/arrowLeft"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="\u25C0"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/logoMindMate"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp" />

    <!-- Data odierna -->
    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#222"
        app:layout_constraintStart_toEndOf="@id/arrowLeft"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <!-- Freccia destra -->
    <TextView
        android:id="@+id/arrowRight"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="\u25B6"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/textDate"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Linea orizzontale bianco panna -->
    <View
        android:id="@+id/headerLine"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#FFF8E7"
        app:layout_constraintTop_toBottomOf="@id/logoMindMate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp" />

    <!-- Wrapper Frase del giorno -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dailyPhraseWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:padding="16dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/headerLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">
        <TextView
            android:id="@+id/dailyPhraseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phrase_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/dailyPhraseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phrase_text"
            android:textSize="14sp"
            android:textColor="#444"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/dailyPhraseTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- TASK DEL GIORNO con linea spezzata -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/taskSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dailyPhraseWrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <View
            android:id="@+id/taskLineLeft"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#DDD"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/taskTitle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" />
        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_title"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#222"
            android:letterSpacing="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/taskLineLeft"
            app:layout_constraintEnd_toStartOf="@id/taskLineRight"
            app:layout_constraintHorizontal_bias="0.5" />
        <View
            android:id="@+id/taskLineRight"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#DDD"
            app:layout_constraintStart_toEndOf="@id/taskTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 3 task wrapper orizzontali -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tasksWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/taskSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <!-- Task 1 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/task2"
            app:layout_constraintHorizontal_weight="1"
            android:background="#FFF"
            android:elevation="2dp"
            android:padding="8dp">
            <ImageView
                android:id="@+id/task1_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/pill"
                android:contentDescription="@string/task1_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/task1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task1_title"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#222"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/task1_img"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="4dp" />
            <TextView
                android:id="@+id/task1_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task1_desc"
                android:textSize="12sp"
                android:textColor="#444"
                app:layout_constraintTop_toBottomOf="@id/task1_title"
                app:layout_constraintStart_toStartOf="@id/task1_title"
                app:layout_constraintEnd_toEndOf="@id/task1_title"
                android:layout_marginTop="2dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Task 2 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/task1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/task3"
            app:layout_constraintHorizontal_weight="1"
            android:background="#FFF"
            android:elevation="2dp"
            android:padding="8dp">
            <ImageView
                android:id="@+id/task2_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/pill"
                android:contentDescription="@string/task2_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/task2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task2_title"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#222"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/task2_img"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="4dp" />
            <TextView
                android:id="@+id/task2_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task2_desc"
                android:textSize="12sp"
                android:textColor="#444"
                app:layout_constraintTop_toBottomOf="@id/task2_title"
                app:layout_constraintStart_toStartOf="@id/task2_title"
                app:layout_constraintEnd_toEndOf="@id/task2_title"
                android:layout_marginTop="2dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Task 3 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/task2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:background="#FFF"
            android:elevation="2dp"
            android:padding="8dp">
            <ImageView
                android:id="@+id/task3_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/pill"
                android:contentDescription="@string/task3_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/task3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task3_title"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#222"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/task3_img"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="4dp" />
            <TextView
                android:id="@+id/task3_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task3_desc"
                android:textSize="12sp"
                android:textColor="#444"
                app:layout_constraintTop_toBottomOf="@id/task3_title"
                app:layout_constraintStart_toStartOf="@id/task3_title"
                app:layout_constraintEnd_toEndOf="@id/task3_title"
                android:layout_marginTop="2dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Obiettivi -->
    <TextView
        android:id="@+id/obiettiviTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/obiettivi"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#222"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/tasksWrapper"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/obiettiviWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/obiettiviTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp">
        <ImageView
            android:id="@+id/obiettivo1_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/obiettivo1"
            android:contentDescription="ridurre lo stress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/obiettivo2_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/obiettivo2"
            android:contentDescription="rilassarsi"
            app:layout_constraintStart_toEndOf="@id/obiettivo1_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" />
        <ImageView
            android:id="@+id/obiettivo3_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/obiettivo3"
            android:contentDescription="gestire la rabbia"
            app:layout_constraintStart_toEndOf="@id/obiettivo2_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- AttivitÃ  fisica -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/attivitaFisicaWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:elevation="2dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/obiettiviWrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:id="@+id/attivitaFisicaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attivita_fisica"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#222"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/attivitaFisicaDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attivita_fisica_desc"
            android:textSize="13sp"
            android:textColor="#444"
            app:layout_constraintStart_toStartOf="@id/attivitaFisicaTitle"
            app:layout_constraintTop_toBottomOf="@id/attivitaFisicaTitle"
            android:layout_marginTop="4dp" />
        <ImageView
            android:id="@+id/running_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/running"
            android:contentDescription="corsa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
