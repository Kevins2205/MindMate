<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image30">

    <ImageView
        android:id="@+id/logoMindMate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logomindmate"
        android:contentDescription="@string/app_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/arrowLeft"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="\u25C0"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/logoMindMate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:text="@string/date"
        android:textColor="#222"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/arrowLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/arrowRight"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="\u25B6"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toEndOf="@id/textDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dailyPhraseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frase del giorno"
        android:textSize="14sp"
        android:textColor="#444"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/task1_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/pill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dailyPhraseText" />

</androidx.constraintlayout.widget.ConstraintLayout>
