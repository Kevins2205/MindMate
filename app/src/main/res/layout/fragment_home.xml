<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image30">

    <!-- Logo MindMate in alto a sinistra -->
    <ImageView
        android:id="@+id/logoMindMate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logomindmate"
        android:contentDescription="@string/app_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/headerLine" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textColor="#222"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/headerLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/arrowLeft"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="\u25C0"
        android:textSize="24sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/textDate"
        app:layout_constraintTop_toTopOf="@id/textDate"
        app:layout_constraintBottom_toBottomOf="@id/textDate" />

    <TextView
        android:id="@+id/arrowRight"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="\u25B6"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/textDate"
        app:layout_constraintTop_toTopOf="@id/textDate"
        app:layout_constraintBottom_toBottomOf="@id/textDate" />

    <View
        android:id="@+id/headerLine"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#FFF8E7"
        app:layout_constraintTop_toBottomOf="@id/logoMindMate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Wrapper Frase del giorno -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dailyPhraseWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_phrase"
        android:padding="16dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/headerLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">
        <TextView
            android:id="@+id/dailyPhraseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phrase_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/dailyPhraseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phrase_text"
            android:textSize="14sp"
            android:textColor="#444"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/dailyPhraseTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- TASK DEL GIORNO con linea spezzata -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/taskSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dailyPhraseWrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <View
            android:id="@+id/taskLineLeft"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#DDD"
            app:layout_constraintEnd_toStartOf="@id/taskTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:text="@string/task_title"
            android:textColor="#222"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/taskLineRight"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/taskLineLeft"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/taskLineRight"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#DDD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/taskTitle"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 3 task wrapper orizzontali -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tasksWrapper"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/taskSection">

        <!-- Task 1 Wrapper -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task1_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/task2_wrapper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/task1"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_task"
                android:elevation="2dp"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/task1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/task1_title"
                    android:textColor="#222"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <TextView
                    android:id="@+id/task1_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="@string/task1_desc"
                    android:textColor="#444"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/task1_title"
                    app:layout_constraintStart_toStartOf="@id/task1_title"
                    app:layout_constraintTop_toBottomOf="@id/task1_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/task1_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="-6dp"
                android:contentDescription="@string/task1_title"
                android:elevation="8dp"
                android:src="@drawable/pill"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Task 2 Wrapper -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task2_wrapper"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/task3_wrapper"
            app:layout_constraintStart_toEndOf="@id/task1_wrapper"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/task2"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_task"
                android:elevation="2dp"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/task2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:text="@string/task2_title"
                    android:textColor="#222"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/task2_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="@string/task2_desc"
                    android:textColor="#444"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/task2_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/task2_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="-6dp"
                android:contentDescription="@string/task2_title"
                android:elevation="8dp"
                android:src="@drawable/pill"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Task 3 Wrapper -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task3_wrapper"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/task2_wrapper"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/task3"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:elevation="2dp"
                android:padding="8dp"
                android:background="@drawable/bg_task"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/task3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:text="@string/task3_title"
                    android:textColor="#222"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/task3_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/task3_desc"
                    android:textColor="#444"
                    android:textSize="12sp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="@id/task3_title"
                    app:layout_constraintStart_toStartOf="@id/task3_title"
                    app:layout_constraintTop_toBottomOf="@id/task3_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/task3_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/pill"
                android:contentDescription="@string/task3_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="8dp"
                android:layout_marginStart="-6dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/obiettiviTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/obiettivi"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#222"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/tasksWrapper"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Sezione OBIETTIVI: riga orizzontale con 3 obiettivi, testo hint e tasto + a destra -->
    <LinearLayout
        android:id="@+id/obiettiviWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/attivitaFisicaWrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/obiettiviTitle">

        <!-- Slot obiettivi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!-- Obiettivo 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                    <ImageView
                        android:id="@+id/obiettivo1_img"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/obiettivo1" />

                    <ImageView
                        android:id="@+id/x_task1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="0dp"
                        android:background="@drawable/bg_day_empty"
                        android:contentDescription="@string/app_name"
                        android:padding="2dp"
                        android:src="@drawable/ic_x" />
                </FrameLayout>

                <TextView
                    android:id="@+id/obiettivo1_title"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="#222"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/obiettivo1_id"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="#888"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
            <!-- Obiettivo 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                    <ImageView
                        android:id="@+id/obiettivo2_img"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/obiettivo2" />

                    <ImageView
                        android:id="@+id/x_task2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="0dp"
                        android:background="@drawable/bg_day_empty"
                        android:contentDescription="@string/app_name"
                        android:padding="2dp"
                        android:src="@drawable/ic_x" />
                </FrameLayout>

                <TextView
                    android:id="@+id/obiettivo2_title"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="#222"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/obiettivo2_id"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="#888"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
            <!-- Obiettivo 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                    <ImageView
                        android:id="@+id/obiettivo3_img"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/obiettivo3" />

                    <ImageView
                        android:id="@+id/x_task3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="0dp"
                        android:background="@drawable/bg_day_empty"
                        android:contentDescription="@string/app_name"
                        android:padding="2dp"
                        android:src="@drawable/ic_x" />
                </FrameLayout>

                <TextView
                    android:id="@+id/obiettivo3_title"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="#222"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/obiettivo3_id"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="#888"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tasto + per aggiungere obiettivi, visibile solo se < 3 obiettivi -->
        <ImageView
            android:id="@+id/btn_add_obiettivo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_add"
            android:visibility="visible" />
    </LinearLayout>

    <!-- Layout centrato per quando NON ci sono obiettivi -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/obiettiviEmptyWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/obiettiviTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/attivitaFisicaWrapper"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/obiettiviEmptyInner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/add_hint_label_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:text="Aggiungi gli obiettivi qui"
                android:textColor="#666"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <ImageView
                android:id="@+id/btn_add_obiettivo_empty"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_add"
                android:contentDescription="@string/app_name"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Wrapper Attività Fisica -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/attivitaFisicaWrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_attivita"
        android:elevation="2dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/obiettiviEmptyWrapper">

        <TextView
            android:id="@+id/attivitaFisicaTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attivita_title"
            android:textColor="#222"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/attivitaFisicaDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/attivita_subtitle"
            android:textColor="#444"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/attivitaFisicaTitle"
            app:layout_constraintTop_toBottomOf="@id/attivitaFisicaTitle" />

        <ImageView
            android:id="@+id/running_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:contentDescription="corsa"
            android:src="@drawable/running"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
