<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_event_item_rounded"
    android:padding="8dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="2dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgTipoPreferito"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:tint="#4F8EF7"
        android:src="@drawable/ic_audio"
        android:contentDescription="Tipo contenuto"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/tvTitoloPreferito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titolo Ispirazione"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222"/>

        <TextView
            android:id="@+id/tvTipoPreferito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo: audio"
            android:textSize="13sp"
            android:textColor="#4F8EF7"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/tvDescrizionePreferito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contenuto preferito salvato"
            android:textSize="13sp"
            android:textColor="#666"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingTop="2dp"/>
    </LinearLayout>

</LinearLayout>
