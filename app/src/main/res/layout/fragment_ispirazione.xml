<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image30">

    <!-- Logo in alto a sinistra -->
    <ImageView
        android:id="@+id/logoMindMate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logomindmate"
        android:contentDescription="Logo MindMate"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Titolo Video centrato -->
    <TextView
        android:id="@+id/tvTitleVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video"
        android:textColor="#222"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Linea header -->
    <View
        android:id="@+id/headerLineIspirazione"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFF8E7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/logoMindMate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sezione Video Motivazioni -->
    <TextView
        android:id="@+id/tvVideoMotivazioni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video motivazionali"
        android:textColor="#222"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/headerLineIspirazione"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/tvSottotitoloVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tira su il morale!"
        android:textColor="#666"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvVideoMotivazioni"
        app:layout_constraintStart_toStartOf="@id/tvVideoMotivazioni"
        android:layout_marginTop="4dp"/>

    <!-- Wrapper bianco sbiadito per video -->
    <LinearLayout
        android:id="@+id/layoutVideoWrapper"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_video_wrapper"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSottotitoloVideo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Video principale con wrapper panna -->
        <FrameLayout
            android:id="@+id/wrapperPrincipale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bg_video_rounded"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/imgCoverPrincipale"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_video_cover"
                    android:clipToOutline="true"
                    android:src="@drawable/cover1"
                    android:contentDescription="@string/descrizione_copertina_video" />
                <TextView
                    android:id="@+id/tvTitoloPrincipale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titolo_video_principale"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:elevation="2dp" />
                <ImageView
                    android:id="@+id/btnPlayPrincipale"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_play"
                    android:layout_gravity="center"
                    android:contentDescription="@string/descrizione_play" />

        </FrameLayout>

        <!-- Lista correlati con wrapper panna -->
        <LinearLayout
            android:id="@+id/layoutCorrelati"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2">

            <FrameLayout
                android:id="@+id/wrapperCorrelato1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_video_rounded"
                android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/imgCoverCorrelato1"
                        android:layout_width="130dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_video_cover"
                        android:clipToOutline="true"
                        android:src="@drawable/cover2"
                        android:contentDescription="@string/descrizione_copertina_video" />
                    <TextView
                        android:id="@+id/tvTitoloCorrelato1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/titolo_video_correlato1"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/transparent"
                        android:elevation="2dp" />
                    <ImageView
                        android:id="@+id/btnPlayCorrelato1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_play"
                        android:layout_gravity="center"
                        android:contentDescription="@string/descrizione_play" />

            </FrameLayout>
            <FrameLayout
                android:id="@+id/wrapperCorrelato2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bg_video_rounded">

                    <ImageView
                        android:id="@+id/imgCoverCorrelato2"
                        android:layout_width="130dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_video_cover"
                        android:clipToOutline="true"
                        android:src="@drawable/cover3"
                        android:contentDescription="@string/descrizione_copertina_video" />
                    <TextView
                        android:id="@+id/tvTitoloCorrelato2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/titolo_video_correlato2"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/transparent"
                        android:elevation="2dp" />
                    <ImageView
                        android:id="@+id/btnPlayCorrelato2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_play"
                        android:layout_gravity="center"
                        android:contentDescription="@string/descrizione_play" />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Sezione Audio e Podcast -->
    <TextView
        android:id="@+id/tvAudioPodcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio e podcast"
        android:textColor="#222"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/layoutVideoWrapper"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/tvSottotitoloAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Storie che ti potrebbero ispirare."
        android:textColor="#666"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvAudioPodcast"
        app:layout_constraintStart_toStartOf="@id/tvAudioPodcast"
        android:layout_marginTop="4dp"/>

    <!-- Lista audio/podcast -->
    <LinearLayout
        android:id="@+id/listaAudio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSottotitoloAudio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Audio 1 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/audioItem1"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_video_wrapper"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/iconaAudio1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_audio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/titoloAudio1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/titolo_audio1"
                android:textColor="#222"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/iconaAudio1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Audio 2 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/audioItem2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_video_wrapper"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/iconaAudio2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_audio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/titoloAudio2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/titolo_audio2"
                android:textColor="#222"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/iconaAudio2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Audio 3 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/audioItem3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_video_wrapper"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/iconaAudio3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_audio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/titoloAudio3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/titolo_audio3"
                android:textColor="#222"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/iconaAudio3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!-- Tasto indietro in basso -->
    <Button
        android:id="@+id/buttonIndietroIspirazione"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Indietro"
        android:textStyle="bold"
        android:backgroundTint="#BDBDBD"
        android:textColor="#222"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
