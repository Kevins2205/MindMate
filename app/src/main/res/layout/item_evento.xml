<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_event_item_rounded"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgPuntina"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/image"
        android:contentDescription="Puntina"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/tvTitoloEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titolo evento"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222"/>

        <TextView
            android:id="@+id/tvDescrizioneEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrizione evento"
            android:textSize="13sp"
            android:textColor="#666"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/tvDataEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data evento"
            android:textSize="13sp"
            android:textColor="#2B5C53"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/tvLuogoEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luogo evento"
            android:textSize="13sp"
            android:textColor="#888"
            android:paddingTop="2dp"/>
    </LinearLayout>

</LinearLayout>
