<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image30">

    <!-- Header con logo e titolo -->
    <ImageView
        android:id="@+id/logoMindMate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logomindmate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTitleEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EVENTO"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/headerLineEvento"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#FFF8E7"
        app:layout_constraintTop_toBottomOf="@id/logoMindMate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <!-- Card con dettagli evento -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardEvento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerLineEvento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonLayoutEvento"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTitoloEventoDettaglio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titolo Evento"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#222"/>

            <TextView
                android:id="@+id/tvDataEventoDettaglio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data evento"
                android:textSize="15sp"
                android:textColor="#666"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvPosizioneEventoDettaglio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Posizione evento"
                android:textSize="15sp"
                android:textColor="#666"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvDescrizioneEventoDettaglio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrizione evento"
                android:textSize="16sp"
                android:textColor="#222"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Bottoni affiancati -->
    <LinearLayout
        android:id="@+id/buttonLayoutEvento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnPartecipaEvento"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:text="Partecipa!"
            android:textStyle="bold"
            android:backgroundTint="#2B5C53"
            android:textColor="#FFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnIndietroEvento"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:text="Indietro"
            android:textStyle="bold"
            android:backgroundTint="#BDBDBD"
            android:textColor="#222"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
