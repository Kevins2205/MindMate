<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image30">

    <!-- Logo in alto a sinistra -->
    <ImageView
        android:id="@+id/logoMindMate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logomindmate"
        android:contentDescription="Logo MindMate"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Titolo centrato -->
    <TextView
        android:id="@+id/textRespirazioneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESPIRAZIONE"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Linea bianca sotto -->
    <View
        android:id="@+id/headerLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#FFF8E7"
        app:layout_constraintTop_toBottomOf="@id/logoMindMate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Testo che cambia -->
    <TextView
        android:id="@+id/textIstruzione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premi Start per iniziare!"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/headerLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Testo cicli rimanenti -->
    <TextView
        android:id="@+id/textCicliRimanenti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cicli rimanenti: 12"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textIstruzione"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Cerchio animato custom -->
    <com.example.mindmate.ui.CerchioAnimatoView
        android:id="@+id/cerchioAnimato"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@id/textCicliRimanenti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Bottone Start -->
    <Button
        android:id="@+id/buttonStart"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Start"
        android:textStyle="bold"
        android:backgroundTint="#2B5C53"
        android:textColor="#FFF"
        app:layout_constraintTop_toBottomOf="@id/cerchioAnimato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <!-- Bottone Indietro -->
    <Button
        android:id="@+id/buttonIndietro"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Indietro"
        android:textStyle="bold"
        android:backgroundTint="#BDBDBD"
        android:textColor="#222"
        app:layout_constraintTop_toBottomOf="@id/buttonStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
