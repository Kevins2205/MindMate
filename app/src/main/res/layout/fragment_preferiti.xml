<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image30">

    <ImageView
        android:id="@+id/logoAppPreferiti"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logomindmate"
        android:contentDescription="@string/app_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTitoloPreferiti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREFERITI"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#222"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/logoAppPreferiti"
        app:layout_constraintTop_toTopOf="@id/logoAppPreferiti"
        app:layout_constraintBottom_toBottomOf="@id/logoAppPreferiti"/>

    <View
        android:id="@+id/headerLinePreferiti"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFF8E7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/logoAppPreferiti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSottotitoloPreferiti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Visualizza qui tutti i tuoi contenuti preferiti, sia audio che video. Tocca un elemento per ascoltarlo o guardarlo."
        android:textSize="15sp"
        android:textColor="#666"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerLinePreferiti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPreferiti"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSottotitoloPreferiti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btnIndietro"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Indietro"
        android:textStyle="bold"
        android:backgroundTint="#BDBDBD"
        android:textColor="#222"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
