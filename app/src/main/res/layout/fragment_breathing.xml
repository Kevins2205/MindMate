<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="24dp">

    <TextView
        android:id="@+id/breathing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respirazione"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/breathing_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Segui le istruzioni per la respirazione guidata."
        android:textSize="18sp"
        android:textColor="#444"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_start_breathing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inizia esercizio"
        android:backgroundTint="#4CAF50"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/breathing_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="48sp"
        android:textColor="#4CAF50"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/attivitamotivation" />
</LinearLayout>
