<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image30">

    <ImageView
        android:id="@+id/logoAppProssimi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logomindmate"
        android:contentDescription="@string/app_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTitoloProssimiEventi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROSSIMI EVENTI"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#222"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/logoAppProssimi"
        app:layout_constraintTop_toTopOf="@id/logoAppProssimi"
        app:layout_constraintBottom_toBottomOf="@id/logoAppProssimi"/>

    <View
        android:id="@+id/headerLineProssimi"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFF8E7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/logoAppProssimi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSottotitoloProssimiEventi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Visualizza tutti gli eventi a cui ti sei prenotato. Tocca un evento per vedere i dettagli."
        android:textSize="15sp"
        android:textColor="#666"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/headerLineProssimi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProssimiEventi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvSottotitoloProssimiEventi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/btnIndietro"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Indietro"
        android:textStyle="bold"
        android:backgroundTint="#BDBDBD"
        android:textColor="#222"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
